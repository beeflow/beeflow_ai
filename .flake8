[flake8]
max-complexity = 11
# it's not a bug that we aren't using all of hacking
ignore =
    W503,
    E704,
    E203
max-line-length = 120
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    venv,
    documentation,
    .idea,
    features,
    web_template,
    */migrations/*
